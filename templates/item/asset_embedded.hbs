{{#each data.fields}}
<p><strong>{{name}}:</strong> {{value}}</p>
{{/each}}

{{#if data.description}}
<p>{{{data.description}}}</p>
{{/if}}

<ul>
  {{#each data.abilities}}
  {{#if enabled}}
  <li>{{{description}}}</li>
  {{/if}}
  {{/each}}
</ul>

{{#if data.track.enabled}}
<div class="flexrow">
  {{#rangeEach from=0 to=data.track.max current=data.track.current}}
  <div class="clickable block track-target progress
              {{#if isCurrent}} selected {{/if}}" data-value={{value}}>
    {{value}}
  </div>
  {{/rangeEach}}
</div>
{{/if}}
