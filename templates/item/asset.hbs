<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <div class="header-fields">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
            </h1>
            <h3>
                <input name="data.description" type="text" value="{{data.description}}" placeholder="Description" />
            </h3>
        </div>
    </header>

    <h2>Fields</h2>
    <div class="flexcol item-list">
        {{#each data.fields}}
        <div class="flexrow item-row">
            <div class="flexcol">
                <div class="flexrow">
                    <label style="flex-grow: 0; align-self: center;">Label:</label>
                    &nbsp;
                    <input class="attribute-value" type="text" name="data.fields.{{@index}}.name" value="{{name}}" />
                </div>
                <div class="flexrow">
                    <label style="flex-grow: 0; align-self: center;">Value:</label>
                    &nbsp;
                    <input class="attribute-value" type="text" name="data.fields.{{@index}}.value" value="{{value}}" />
                </div>
            </div>
            <div class="block clickable item-row-control delete-field" data-index="{{@index}}">
                <i class="fas fa-trash"></i>
            </div>
        </div>
        {{/each}}
        <div class="block clickable add-field" style="padding: 5px; text-align: center;">
            <i class="fas fa-plus"></i>
        </div>
    </div>


    <h2>Abilities</h2>
    {{#each data.abilities}}
    <div class="flexcol item">
        <div class="flexrow">
            <input type="checkbox" name="data.abilities.{{@index}}.enabled" {{checked enabled}} style="flex-grow: 0;" />
            <input class="attribute-value" type="text" name="data.abilities.{{@index}}.description"
                value="{{description}}" />
        </div>
    </div>
    <p>
    </p>
    {{/each}}

    <h3>Rendered</h3>
    {{{data.rendered}}}
</form>
