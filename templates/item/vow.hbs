<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <h1>
      <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
    </h1>
  </header>

  <section class="flexrow nogrow">
    <label>Rank:</label>
    <select name="data.rank">
      {{selectOptions ranks selected=data.rank}}
    </select>
  </section>

  <div class="flexrow nogrow">
    {{#each (progressCharacters this)}}
    <div class="progress block">{{{this}}}</div>
    {{/each}}
  </div>

  <div class="flexrow nogrow">
    <button class="markProgress" data-itemid="{{item._id}}">Mark</button>
    <button class="clearProgress" data-itemid="{{item._id}}">Clear</button>
    <button class="fulfillProgress" data-itemid="{{item._id}}">Fulfill</button>
  </div>

</form>
