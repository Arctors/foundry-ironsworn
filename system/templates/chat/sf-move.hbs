<div class="flexcol">
  <h3>{{move.name}}</h3>

  <div class="dice-result dice-tooltip dice-roll ironsworn-roll" data-move="{{move.Name}}">
    <div class="roll-result">
      {{{enrichMarkdown move.data.data.Text}}}
    </div>
  </div>

  {{#if nextOracles}}
  <hr>
  {{#each nextOracles}}
  <button class="starforged__oracle__roll" data-tableid="{{id}}">
    <i class="fas fa-dice-d6"></i>
    {{name}}
  </button>
  {{/each}}
  {{/if}}

</div>
