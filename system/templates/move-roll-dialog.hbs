<form>
  <div class="form-group">
    <label>{{localize 'IRONSWORN.Stat'}}</label>
    <select name="stat">
      {{#each move.Stats}}
      <option value="{{this}}">{{localize (concat 'IRONSWORN.' (capitalize this))}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label>{{localize 'IRONSWORN.Bonus'}}</label>
    <input name="bonus" />
  </div>
</form>
