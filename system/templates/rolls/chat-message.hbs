<article
  class='ironsworn-roll flexcol'
  data-ironswornroll='{{json ironswornroll}}'
>
  <h3>
    {{title}}
  </h3>

  <section class='dice-result dice-tooltip dice-roll ironsworn-roll'>
    {{{graphic}}}
  </section>

  {{#if moveOutcome}}
    <section class='roll-result'>
      <p>
        {{#if outcomeReplacementReason}}
          {{outcomeReplacementReason}}:
        {{/if}}
        <strong>{{outcomeText}}</strong>
      </p>
      {{{enrichMarkdown moveOutcome}}}
    </section>
  {{else if outcomeReplacementReason}}
    <p>
      {{outcomeReplacementReason}}:
      <strong>{{outcomeText}}</strong>
    </p>
  {{/if}}

  {{#if possibleMomentumBurn}}
    <hr />
    <section class='momentum-burn'>
      <p>{{{localize 'IRONSWORN.BurnForUpgrade' type=possibleMomentumBurn}}}</p>
      <button
        class='icon-button fas fa-fire ironsworn-roll-burn-momentum'
        type='button'
      >
        {{localize 'IRONSWORN.Burn'}}
      </button>
    </section>
  {{/if}}

  {{#if nextOracles}}
    <hr />
    <section class='move-oracle-buttons'>
      {{#each nextOracles}}
        <button
          class='starforged__oracle__roll icon-button isicon-d10-tilt'
          type='button'
          data-tableid='{{id}}'
        >
          {{name}}
        </button>
      {{/each}}
    </section>
  {{/if}}

</article>