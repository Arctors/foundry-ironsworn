<div class="dice-roll ironsworn-roll">

  <div class="dice-formula">
    <p>
      {{!-- The action die or progress score --}}
      {{#if actionCanceledByNegativeMomentum}}<del>{{/if}}
        <span class="action roll isiconbg-d6-blank {{actionMinMax}}" title="{{computedActionDie.source}}">
          {{#if computedActionDie.value}}
          {{computedActionDie.value}}
          {{else}}
          &nbsp;
          {{/if}}
        </span>
        {{#if actionCanceledByNegativeMomentum}}</del>{{/if}}

      {{#each adds}}
      &plus;
      <span title="{{source}}">{{value}}</span>
      {{/each}}

      {{#if actionTotal}}
      &equals;
      <strong>
        {{#if actionTotalCapped}}
        <abbr title="{{localize 'IRONSWORN.CappedAt10'}}">{{actionTotal}}</abbr>
        {{else}}
        {{actionTotal}}
        {{/if}}
      </strong>
      {{/if}}

      {{localize 'IRONSWORN.Versus'}}

      {{#each challengeDice}}
      <span class="roll die isiconbg-d10-blank challenge {{minmax}}" title="{{source}}">
        {{#if value}}
        {{value}}
        {{else}}
        &nbsp;
        {{/if}}
      </span>
      {{/each}}

      {{#if outcome}}
      &equals;
      <strong title="{{outcome.source}}">{{outcome.value}}</strong>
      {{/if}}

    </p>
  </div>

  {{!--
  <pre><code>{{json this}}</code></pre> --}}
</div>
